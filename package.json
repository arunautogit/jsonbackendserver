{
  "name": "ipl-ecommerce-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "IPL Card Game + Ecommerce Backend with React and JSON Server Auth",
  "main": "db.json",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run server\"",
    "frontend": "vite",
    "server": "nodemon server/index.js",
    "backend-old-ecommerce": "json-server-auth db.json --routes routes.json --rules rules.json --watch --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "setup": "npm install"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "json-server": "^0.17.4",
    "json-server-auth": "^2.1.0",
    "nodemon": "^3.1.11",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4"
  },
  "author": "Arun",
  "license": "MIT",
  "keywords": [
    "ipl",
    "react",
    "vite",
    "json-server",
    "ecommerce",
    "socket"
  ]
